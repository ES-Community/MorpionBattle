    head
        title MorpionBattle
        link(rel='stylesheet', href='/static/fonts/Roboto.css')
        link(rel='stylesheet', href='/static/fonts/Exo.css')
        link(rel='stylesheet', href='/static/lib/font-awesome.css')
        link(rel='stylesheet', href='/static/lib/animate.css')
        link(rel='stylesheet', href='/static/lib/loading-bar.css')
        link(rel='stylesheet', href='/static/css/master.css')
        link(rel='stylesheet', href='/static/css/generic/form.css')
        link(rel='stylesheet', href='/static/css/ngAnimation.css')
        link(rel='stylesheet', href='/static/css/authentification.css')
        link(rel='stylesheet', href='/static/css/lobby.css')
        link(rel='stylesheet', href='/static/css/popups.css')
        link(rel='stylesheet', href='/static/css/game.css')
        script(src="/static/lib/socket.io.js",defer)
        script(src="/static/lib/angular.min.js",defer)
        script(src="/static/lib/angular-animate.min.js",defer)
        script(src="/static/lib/angular-sanitize.min.js",defer)
        script(src="/static/lib/angular-route.min.js",defer)
        script(src="/static/lib/loading-bar.js",defer)
        script(src="/static/js/factory/socket.js",defer)
        script(src="/static/js/factory/popup.js",defer)
