section(id="lobby",ng-controller="lobby")
    section(class="userData")
        section(class="name")
            p #{login}
            span(ng-click="logout()") Logout
        section(class="stats win")
            h2 win
            span #{win}
        section(class="stats loose")
            h2 loose
            span #{loose}
        section(class="stats elo")
            h2 elo
            span #{elo}
    main(ng-controller="serversList")
        section(class="serversList")
            section(class="server",ng-class="{'focus': focus}",ng-repeat="(k,v) in serversList",ng-click="selectGame(v.id);focus = true")
                p(class="lock")
                    i(class="fa fa-lock",ng-show="v.password === true")
                    i(class="fa fa-unlock",ng-show="v.password === false")
                p(class="name") {{v.name}}
                span {{v.playerCount}}/3
        section(class="options")
            button(ng-click="popupState(true)") Create Game
            button(ng-class="{ 'inactive' : serverSelected === false }",ng-click="joinGame()") Join
